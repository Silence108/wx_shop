/* 收货地址 */
image {
  width: 100%;
  height: 100%;
  display: block;
}
.list .item {
  background: #fff;
  margin-top: 6rpx;
}
.list .item .line {
  width: 100%;
  height: 3rpx;
}
.list .item .addressinfo {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
}
.list .item .addressinfo .icon {
  width: 27rpx;
  height: 36rpx;
  margin-top: 5rpx;
}
.list .item .addressinfo .ad_info {
  width: 610rpx;
  font-size: 32rpx;
}
.list .item .addressinfo .ad_info .name {
  margin-right: 20rpx;
}
.list .item .addressinfo .ad_info .info {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.list .item .addressinfo .jt {
  width: 12rpx;
  height: 23rpx;
  margin-top: 60rpx;
}
.item .action {
  margin: auto 24rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  line-height: 68rpx;
  border-top: #dfdfdf solid 1rpx;
}
.item .action .default {
  display: flex;
}
.item .action .default .icon {
  width: 38rpx;
  height: 38rpx;
  margin-top: 15rpx;
  margin-right: 10rpx;
}
.item .action .ac .l {
  display: inline-block;
  width: 2rpx;
  height: 26rpx;
  background-color: #dfdfdf;
  margin: 0 25rpx;
  vertical-align: middle
}
.add_btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  background: #d33b27;
  color: #fff;
  line-height: 88rpx;
  font-size: 32rpx;
}