/* 首页 index css */

/* banner */
.banner,.slide-image {
  width: 100%;
  height: 380rpx;
}
/* menu */
.menu {
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
  text-align: center;
  padding: 20rpx 24rpx 28rpx 24rpx;
  background: #fff; 
  position: relative;
}
.menu::after {
  content: '';
  background: #fff;
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 28rpx;
  top: -16rpx;
  border-radius: 50% 50% 0 0;
}
.menu .item {
  width: 20%;
  text-align: center;
  z-index: 2;
}
.menu .item image {
  width: 80rpx;
  height: 80rpx;
}
/* 精选商品文字 */
.box {
  display: flex;
  font-size: 26rpx;
}
.box .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  margin-top: 24rpx;
  display: inline-block;
}
.box .txt {
  display: inline-block;
  line-height: 80rpx;
}
