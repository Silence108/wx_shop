<!--添加地址-->
<view class='container'>
  <view class='item'>
    <view class='key'>收货人</view>
    <view class='value'><input type='text'></input></view>
  </view>
  <view class='item'>
    <view class='key'>联系电话</view>
    <view class='value'><input type='number'></input></view>
  </view>
  <view class='item'>
    <view class='key'>所在地区</view>
    <view class='value'>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">
          {{region[0]}} {{region[1]}} {{region[2]}}
        </view>
      </picker>
    </view>
    <view class='jt'><image src='/images/jiantou@2x.png'></image></view>
  </view>
  <view class='item'>
    <view class='key'>详细地址</view>
    <view class='value'><input type='text'></input></view>
  </view>
  <navigator class='add_btn' hover-class='none'>保存</navigator>
</view>
