/* pages/address_add/address_add.wxss */
image {
  width: 100%;
  height: 100%;
  display: block;
}
.item {
  background: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: #dfdfdf solid 1rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  padding: 0 24rpx;
}
.item .key {
  width: 150rpx;
}
.item  input,picker {
  height: 88rpx;
  line-height: 88rpx;
  width: 540rpx;
}
.item:first-child {
  margin-top: 10rpx;
}
.item:last-child {
  border-bottom: none;
}
.item .jt {
  width: 12rpx;
  height: 22rpx;
  margin-top: 33rpx;
}
.add_btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  background: #d33b27;
  color: #fff;
  line-height: 88rpx;
  font-size: 32rpx;
}