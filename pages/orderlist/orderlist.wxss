/* pages/orderlist/orderlist.wxss */
image {
  width: 100%;
  height: 100%;
  display: block;
}
.container {
  background: #f5f5f5;
}
.no {
  height: 92vh
}
/* 头部Tab选项卡 */
.container .menutab {
  background: #fff;
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 88rpx;
  line-height: 82rpx;
  text-align: center;
}
.container .menutab .item {
  font-size: 32rpx;
}
.container .menutab .item .itemtext.active {
  color: #D33B27;
  border-bottom: #D33B27 solid 6rpx;
}
/* 订单列表 */
.container .orderlist {
  /* margin-top: 20rpx; */
  height: 92vh;
  overflow: auto;
}
.container .orderlist .order {
  background: #fff;
  margin-bottom: 8rpx;
}
.container .orderlist .order:first-child {
  margin-top: 8rpx;
}
/* 订单编号 */
.container .orderlist .order .ordernumber {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #999;
  padding: 24rpx;
  border-bottom: #dfdfdf solid 1rpx;
}
.container .orderlist .order .ordernumber .status.active {
  color: #D33B27;
}
/* 商品信息 */
.container .orderlist .order .goodsinfo {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: #f5f5f5 solid 1rpx;
}
.container .orderlist .order .goodsinfo .goodsimg {
  width: 160rpx;
  height: 160rpx;
}
.container .orderlist .order .goodsinfo .goodsin {
  width: 500rpx;
  font-size: 30rpx;
  position: relative;
  height: 160rpx;
}
.container .orderlist .order .goodsinfo .goodsin .title {
  width: 500rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.container .orderlist .order .goodsinfo .goodsin .pricenumber {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 500rpx;
}
.container .orderlist .order .goodsinfo .goodsin .pricenumber .price {
   color: #D33B27; 
}
.container .orderlist .order .goodsinfo .goodsin .type {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
/* 商品总价价格 */
.container .orderlist .order .goodsprice {
  text-align: right;
  padding: 24rpx;
  font-size: 30rpx;
  border-bottom: #f5f5f5 solid 1rpx;
}
.container .orderlist .order .goodsprice .totalprice {
  margin-right: 20rpx;
  color: #333;
}
/* 订单操作 */
.container .orderlist .order .action {
  text-align: right;
  padding: 24rpx;
}
.container .orderlist .order .action .cancel {
  display: inline-block;
  border: #666 solid 1rpx;
  border-radius: 10rpx;
  padding: 0 13rpx;
  font-size: 24rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  width: 120rpx;
  text-align: center;
}
.container .orderlist .order .action .cancel.red {
  color: #D33B27;
  border: #D33B27 solid 1rpx;
}
.container .orderlist .order .action .nowpay {
  display: inline-block;
  border: #a70202 solid 1rpx;
  background: #a70202;
  border-radius: 10rpx;
  padding: 0 13rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
}
