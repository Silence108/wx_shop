/* 评价成功 */
image {
  width: 100%;
  height: 100%;
  display: block;
}
/* 成功反馈 */
.success_bg {
  width: 100%;
  height: 300rpx;
  position: relative;
  font-size: 30rpx;
  color: #fff;
}
.success_bg .t1 {
  position: absolute;
  top: 70rpx;
  left: 120rpx;
}
.success_bg .t2 {
  position: absolute;
  top: 110rpx;
  left: 60rpx;
}
/* 待评价列表 */
/* 订单编号 */
.order {
  background: #fff;
  margin-top: 6rpx;
}
.order .ordernumber {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #999;
  padding: 24rpx;
  border-bottom: #dfdfdf solid 1rpx;
}
.order .ordernumber .status.active {
  color: #D33B27;
}
/* 商品信息 */
.order .goodsinfo {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: #f5f5f5 solid 1rpx;
}
.order .goodsinfo .goodsimg {
  width: 160rpx;
  height: 160rpx;
}
.order .goodsinfo .goodsin {
  width: 500rpx;
  font-size: 30rpx;
  position: relative;
  height: 160rpx;
}
.order .goodsinfo .goodsin .title {
  width: 500rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.order .goodsinfo .goodsin .pricenumber {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 500rpx;
}
.order .goodsinfo .goodsin .pricenumber .price {
   color: #D33B27; 
}
.order .goodsinfo .goodsin .type {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
/* 商品总价价格 */
.order .goodsprice {
  text-align: right;
  padding: 24rpx;
  font-size: 30rpx;
  border-bottom: #f5f5f5 solid 1rpx;
}
.order .goodsprice .totalprice {
  margin-right: 20rpx;
  color: #333;
}
/* 订单操作 */
.order .action {
  text-align: right;
  padding: 24rpx;
}
.order .action .cancel {
  display: inline-block;
  border: #666 solid 1rpx;
  border-radius: 10rpx;
  padding: 0 13rpx;
  font-size: 24rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  width: 120rpx;
  text-align: center;
}
.order .action .cancel.red {
  color: #D33B27;
  border: #D33B27 solid 1rpx;
}
.order .action .nowpay {
  display: inline-block;
  border: #a70202 solid 1rpx;
  background: #a70202;
  border-radius: 10rpx;
  padding: 0 13rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
}