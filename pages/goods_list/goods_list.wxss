/* 商品列表 */
.tab .item.price::before {
  content: '';
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 10rpx solid #aaa;
  position: absolute;
  top: 30rpx;
  right: 60rpx;
}
.tab .item.price::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #aaa;
  position: absolute;
  top: 45rpx;
  right: 60rpx;
}