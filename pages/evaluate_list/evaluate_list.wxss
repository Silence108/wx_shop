/* 评价列表 */
image {
  width: 100%;
  height: 100%;
  display: block;
}
/* 商品信息 */
.item {
  background: #fff;
}
.goodsinfo {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: #f5f5f5 solid 1rpx;
  margin-top: 6rpx;
}
.goodsinfo .goodsimg {
  width: 160rpx;
  height: 160rpx;
}
.goodsinfo .goodsin {
  width: 500rpx;
  font-size: 30rpx;
  position: relative;
  height: 160rpx;
}
.goodsinfo .goodsin .title {
  width: 500rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.goodsinfo .goodsin .pricenumber {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 500rpx;
}
.goodsinfo .goodsin .pricenumber .price {
   color: #D33B27; 
}
.goodsinfo .goodsin .type {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
/* 订单操作 */
.action {
  text-align: right;
  padding: 24rpx;
}
.action .cancel {
  display: inline-block;
  border: #666 solid 1rpx;
  border-radius: 10rpx;
  padding: 0 13rpx;
  font-size: 24rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  width: 120rpx;
  text-align: center;
}
.action .cancel.red {
  color: #D33B27;
  border: #D33B27 solid 1rpx;
}