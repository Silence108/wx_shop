/* 收藏列表 */
image {
  width: 100%;
  height: 100%;
  display: block;
}
/* 商品信息 */
.goodsinfo {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: #f5f5f5 solid 1rpx;
  background: #fff;
  margin-top: 6rpx;
}
.goodsinfo .goodsimg {
  width: 160rpx;
  height: 160rpx;
}
.goodsinfo .goodsin {
  width: 500rpx;
  font-size: 30rpx;
  position: relative;
  height: 160rpx;
}
.goodsinfo .goodsin .title {
  width: 500rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.goodsinfo .goodsin .pricenumber {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 500rpx;
}
.goodsinfo .goodsin .pricenumber .price {
   color: #D33B27; 
}
.goodsinfo .goodsin .type {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}