/* pages/confirmOrder/confirmOrder.wxss */
image {
  width: 100%;
  height: 100%;
  display: block;
}
.container {
  background: #f5f5f5;
}
.container .address {
  background: #fff;
  margin-bottom: 8rpx;
  margin-top: 6rpx;
  /* height: 143rpx; */
  width: 750rpx;
  /* position: relative; */
}
/* 没有收货地址 */
.container .address .noaddress {
  /* text-align: center; */
  font-size: 28rpx;
  padding: 0 24rpx;
  line-height: 88rpx;
  display: none;
}
.container .address .noaddress.active {
  display: block;
}
.container .address .noaddress .add .addimg {
  width: 27rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.address .add {
  position: relative;
}
.address .add .jt {
  width: 12rpx;
  height: 22rpx;
  display: inline-block;
  position: absolute;
  right: 0;
  top: 34rpx
}
action-sheet-cancel,action-sheet-item {
  font-size: 28rpx;
}
.container .address .noaddress .add .text {
  display: inline-block;
  /* margin-top: 18rpx; */
}
.container .address .noaddress .notext {
  font-size: 26rpx;
  color: #999;
}
/* 有收货地址 */
.container .address .hasaddress {
  padding: 24rpx;
  display: none;
  justify-content: space-between;
}
.container .address .hasaddress.active {
  display: flex;
}
.container .address .hasaddress .addressicon {
  width: 33rpx;
  height: 44rpx;
  margin-top: 20rpx;
}
.container .address .hasaddress .addressinfo {
  font-size: 36rpx;
  width: 612rpx;
}
.container .address .hasaddress .addressinfo .recipient {
  display: flex;
  justify-content: space-between;
}
.container .address .hasaddress .addressinfo .addressdetail {
  font-size: 30rpx;
}
.container .address .hasaddress .jiantou {
  width: 15.4rpx;
  height: 27rpx;
  margin-top: 32rpx;
}
.container .address .line {
  width: 750rpx;
  height: 5rpx;
  /* position: absolute;
  bottom: 0; */
}
/* 订单详情 */
.container .orderdetails {
  background: #fff;
}
.container .orderdetails .ordertop {
  height: 88rpx;
  border-bottom: #dfdfdf solid 1rpx;
  padding: 0 24rpx;
  font-size: 36rpx;
}
.container .orderdetails .ordertop .ordericon {
  width: 33rpx;
  height: 38rpx;
  display: inline-block;
  margin-top: 27rpx;
  margin-right: 20rpx;
  vertical-align: top;
}
.container .orderdetails .ordertop .ordertext {
  display: inline-block;
  margin-top: 20rpx;
}
.container .orderdetails .orderinfo .goodsinfo {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-bottom: #f5f5f5 solid 1rpx;
}
.container .orderdetails .orderinfo .goodsinfo .goodsimg {
  width: 160rpx;
  height: 160rpx;
}
.container .orderdetails .orderinfo .goodsinfo .goodsin {
  width: 500rpx;
  font-size: 30rpx;
  position: relative;
  height: 160rpx;
}
.container .orderdetails .orderinfo .goodsinfo .goodsin .title {
  width: 500rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.container .orderdetails .orderinfo .goodsinfo .goodsin .type {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;
}
.container .orderdetails .orderinfo .goodsinfo .goodsin .pricenumber {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 500rpx;
}
.container .orderdetails .orderinfo .goodsinfo .goodsin .pricenumber .price {
  color: #E50112;
}
.container .orderdetails .buynumber {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 24rpx;
  height: 88rpx;
  border-bottom: #f5f5f5 solid 1rpx;
  font-size: 30rpx;
}
.container .orderdetails .buynumber .item {
  margin-top: 20rpx;
  font-size: 30rpx;
}
.container .orderdetails .buynumber .number {
  display: flex;
  justify-content: flex-start;
  border: #333 solid 2rpx;
  border-radius: 6rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.container .orderdetails .buynumber .number text {
  width: 60rpx;
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  font-size: 50rpx;
}
.container .orderdetails .buynumber .number text.jian {
  color: #666;
}
.container .orderdetails .buynumber .number input {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  border-left: #999 solid 1rpx;
  border-right: #999 solid 1rpx;
}
.container .orderdetails .buynumber .freight {
  line-height: 88rpx;
}
.container .orderdetails .buynumber .price {
  line-height: 88rpx;
  color: #333;
  font-weight: bold;
}
.orderdetails .place {
  padding: 0 24rpx;
  font-size: 26rpx;
  display: flex;
  line-height: 88rpx;
}
.orderdetails .place input {
  line-height: 88rpx;
  height: 88rpx;
  width: 610rpx;
}
.container .orderdetails .buynumber.payway {
  border-top: #f5f5f5 solid 16rpx;
}
.container .orderdetails .buynumber.payway .price{
  color: #333;
  display: flex;
  font-weight: bold;
}
.container .orderdetails .buynumber.payway .price image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 18rpx;
  margin-right: 15rpx;
}
.container .buy {
  width: 750rpx;
  height: 88rpx;
  background: #fff;
  line-height: 88rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}
.container .buy .pr {
  font-size: 30rpx;
  padding-left: 24rpx;
}
.container .buy .pr .p {
  color: #D33B27;
  margin-left: 10rpx;
}
.container .buy .btn {
  width: 250rpx;
  background: #D33B27;
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  color: #fff;
  display: inline-block;
  font-size: 30rpx;
}