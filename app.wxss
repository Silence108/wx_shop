/**app.wxss**/

page {
  background-color: #f5f5f5;
  width: 100%;
  /* overflow: hidden; */
}
.container {
  height: 100vh;
  color: #333;
  width: 100%;
  overflow-x: hidden; 
}
/* 箭头 */
.arrow {
  padding-right: 28rpx;
  font-size: 26rpx;
  color: #999;
}
.arrow::after {
  content: '';
  position: absolute;
  right: 24rpx;
  top: 50%;
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  -webkit-transform: translateY(-50%) scaleY(0.7) rotateZ(-135deg);
  -moz-transform: translateY(-50%) scaleY(0.7) rotateZ(-135deg);
  -ms-transform: translateY(-50%) scaleY(0.7) rotateZ(-135deg);
}

/* 搜索框 */
.searchbox {
  background-color: #fff;
  /* width: 100%; */
  height: 68rpx;
  padding: 15rpx 24rpx;
}
.searchbox .searchbg {
  background-color: #f5f5f5;
  width: 100%; 
  height: 68rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 68rpx;
  display: flex;
}
/* 图标 */
.searchbox .searchbg image {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  margin: 18rpx 20rpx;
}
/* 输入框 */
.searchbox .searchbg input {
  display: inline-block;
  color: #333;
  line-height: 68rpx;
  height: 68rpx;
  width: 550rpx;
}
.searchbox .searchbg .input_place {
  color: #999;
}

/* 商品列表 */
.goodslist .title {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  position: relative;
  padding: 0 24rpx;
  line-height: 80rpx;
}

.goodslist .title image {
  width: 315rpx;
  height: 27rpx;
  display: inline-block;
  margin: 30rpx 218rpx; 
}
.goodslist {
  margin-top: 10rpx;
}
.goodslist .list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* padding: 24rpx; */
}
.goodslist .list .item {
  width: 372rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  /* padding: 16rpx; 
  border: #bbb solid 1rpx; 
  border-radius: 10rpx; */
}
.goodslist .list .item image {
  width: 100%;
  height: 316rpx;
}
.goodslist .list .item .brief {
  font-size: 28rpx;
  padding: 0 12rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodslist .list .item .prc {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  color: #999;
  padding: 0 12rpx;
}
.goodslist .list .item .prc .price {
  color: #d33b27;
  font-size: 40rpx;
}
.goodslist .list .item .prc .num {
  color: #fff;
  background-color: #d33b27;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}
/* tab */
.tab {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #333;
  margin-top: 3rpx;
}
.tab .item {
  width: 100%;
  text-align: center;
  position: relative;
}
.tab .item.active {
  color: #d33b27;
}
/* 没有商品 */
.no {
  text-align: center;
  padding: 55rpx 0;
}
.no .icon {
  width: 201rpx;
  height: 151rpx;
}
.no .txt {
  font-size: 26rpx;
  color: #999;
  margin: 15rpx 0;
}
.no .btn {
  color: #d33b27;
  border: #d33b27 solid 1rpx;
  border-radius: 10rpx;
  width: 200rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 0 auto;
}